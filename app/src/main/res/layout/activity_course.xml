<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.activity.CourseActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/single_course_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/ic_image_white_24dp"/>
        <TextView
            android:layout_toRightOf="@id/single_course_image"
            android:layout_toEndOf="@id/single_course_image"
            android:id="@+id/single_course_name"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            style="@style/MeAcodeTheme.ListItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/single_course_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>