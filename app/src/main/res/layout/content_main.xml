<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context="br.com.meacodeapp.meacodemobile.ui.fragment.MainActivityFragment"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/colorAccent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">
                <ImageView
                    android:id="@+id/search_card_image"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:src="@drawable/ic_search_white_24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/search_card_text"
                    android:textSize="21sp"
                    android:layout_toRightOf="@+id/search_card_image"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorText"
                    android:text="Procurar curso ou conteúdo"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/colorAccent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">
                <ImageView
                    android:id="@+id/my_courses_card_image"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:src="@drawable/ic_list_white_24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/my_courses_card_text"
                    android:textSize="21sp"
                    android:layout_toRightOf="@+id/my_courses_card_image"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorText"
                    android:text="Meus cursos"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/colorAccent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">
                <ImageView
                    android:id="@+id/my_profile_card_image"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:src="@drawable/ic_account_circle_white_24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/my_profile_card_text"
                    android:textSize="21sp"
                    android:layout_toRightOf="@+id/my_profile_card_image"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorText"
                    android:text="Meu Perfil"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/colorAccent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">
                <ImageView
                    android:id="@+id/settings_card_image"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:src="@drawable/ic_settings_white_24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/settings_card_text"
                    android:textSize="21sp"
                    android:layout_toRightOf="@+id/settings_card_image"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorText"
                    android:text="Configurações"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/colorAccent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">
                <ImageView
                    android:id="@+id/logout_card_image"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:src="@drawable/ic_exit_to_app_white_24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/logout_card_text"
                    android:textSize="21sp"
                    android:layout_toRightOf="@+id/logout_card_image"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorText"
                    android:text="Sair"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>